%h1 Liste des classes

%table
	%thead
		%tr
			%th
				Nom des classes
			
			%th{:colspan => '2'}

	%tbody
		- @classes.each do |c|
			%tr
				%td
					= c.name

				%td
					= link_to "Modif.", edit_classe_path(c), :method => :get

				%td
					= link_to "Suppr.", delete_classe_path(c), :method => :post, data: { confirm: 'Voulez vous vraiment supprimer cette classe?' }


